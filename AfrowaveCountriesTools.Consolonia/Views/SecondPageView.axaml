<UserControl x:Class="AfrowaveCountriesTools.Consolonia.SecondPageView"
	         xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:AfrowaveCountriesTools.Shared.ViewModels"
			 x:CompileBindings="True"
			 x:DataType="vm:SecondPageViewModel"
			 mc:Ignorable="d">
	<Design.DataContext>
		<vm:SecondPageViewModel />
	</Design.DataContext>

	<StackPanel VerticalAlignment="Center" Spacing="1">
		<TextBlock VerticalAlignment="Center"
                   FontWeight="SemiBold"
                   Text="Vložte své přihlašovací údaje"
                   TextAlignment="Center"
                   TextWrapping="Wrap" />
		<TextBox VerticalAlignment="Center"
                 Text="{Binding MailAddress}"
                 Watermark="E-Mailová adresa"
				 UseFloatingWatermark="False" />
		<TextBox VerticalAlignment="Center"
                 PasswordChar="$"
                 Text="{Binding Password}"
                 Watermark="Password"
				 UseFloatingWatermark="False" />
	</StackPanel>
</UserControl>