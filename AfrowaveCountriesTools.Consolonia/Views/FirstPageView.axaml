<UserControl x:Class="AfrowaveCountriesTools.Consolonia.FirstPageView"
	         xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:AfrowaveCountriesTools.Consolonia.ViewModels"
			 x:CompileBindings="True"
			 x:DataType="vm:FirstPageViewModel"
             mc:Ignorable="d">
	<Design.DataContext>
		<vm:FirstPageViewModel />
	</Design.DataContext>

	<StackPanel VerticalAlignment="Center" Spacing="1">
		<TextBlock VerticalAlignment="Center"
			   TextAlignment="Center"
			   FontWeight="SemiBold"
               Text="{Binding Title}"
               TextWrapping="Wrap" />
		<TextBlock VerticalAlignment="Center"
			   TextAlignment="Center"
               Text="{Binding Message}"
               TextWrapping="Wrap" />
	</StackPanel>
</UserControl>